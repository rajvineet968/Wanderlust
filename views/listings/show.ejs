<%-layout("layouts/boilerplate.ejs")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3><%=data1.title%> </h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%=data1.image%>" class="card-img-top show-img" alt="listing_image"><!--adding show-img in class-->
            <div class="card-body">
                <p class="card-text">Owned by <i><%= data1.owner.username%></i><br></p>
                <p class="card-text"><%=data1.description%> <br></p>  
                <p class="card-text">&#8377; <%=data1.price .toLocaleString("en-IN") %> <br></p>   
                <p class="card-text"><%=data1.location%><br></p>
                <p class="card-text"><%=data1.country%></p>    
            </div>
        </div>

        <br>
        <%if(currUser && (currUser._id).equals(data1.owner._id)){%>
        <div class="btns">
            <a href="/listings/<%=data1._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <form method="POST" action="/listings/<%=data1._id%>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>
        <%}%>

        
        <div class="col-8 offset-3 mb-3">
            <hr>
            <h4>Leave A Review</h4>
            <%if(currUser){%>
            <form method="POST" action="/listings/<%=data1._id%>/reviews" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for ="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please add some comments for review.
                    </div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <%}%>
            <p><b>All Reviews</b></p>
            <div class="row"><!--to make 2 cards in one row-->
            <%for (r of data1.reviews){%>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@<%=r.author.username%></h5><!--We have to change name John Doe-->
                        <p class="card-text"><%=r.comment%></p>
                        <p class="card-text"><%=r.rating%> stars</p>
                    </div>
                    <form class=" mb-3" method="POST" action="/listings/<%=data1._id%>/reviews/<%=r._id%>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                </div>
            <%}%>
            </div>

        </div>
    </div>
</body>


<%-layout('layouts/boilerplate.ejs')%>
<body>
    <div class="row mt-3"><!-- Margin top is 0.75rem -->
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
        <form method="POST" action="/listings/<%= data2._id %>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3"><!--mb-3 is class of bootstrap to give a 3px margin-bottom-->
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" value="<%= data2.title %>" type="text" class="form-control" required/>
            <div class="valid-feedback">
                Title Looks good!
                </div>
            <div class="invalid-feedback">
                Please choose a Title.
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required><%= data2.description %></textarea>
            <div class="invalid-feedback">
                Please enter a short Desciption .
            </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" value="<%= data2.image %>" class="form-control" type="text" required />
            <div class="invalid-feedback">
                Please enter a valid Image Link.
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" value="<%= data2.price %>" class="form-control" type="number" required/>
                <div class="invalid-feedback">
                    Please choose a Price.
                </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" value="<%= data2.country %>" class="form-control" type="text" required/>
                <div class="invalid-feedback">
                    Please choose a country.
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" value="<%= data2.location %>" class="form-control" type="text" required/>
            <div class="invalid-feedback">
                Please choose a Location.
            </div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
        <br><br>
        </form>
        </div>
    </div>
</body>


<%-layout("layouts/boilerplate.ejs")%>

<div class="row mt-3"><!--to align them in row and margin-top of 0.75 rem-->
    <h1  class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3"><!--to align them in 8 column if u have 12 columns  and with left offset of 0.5rem-->
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3"><!--mb-3 is class of bootstrap to give a 3px margin-bottom-->
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" class="form-control" required>
            </div>  
            <div class="mb-3"><!--mb-3 is class of bootstrap to give a 3px margin-bottom-->
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required>
            </div> 
            <button class="btn btn-success mt-2">SignUp</button>
        </form>
    </div>
</div>